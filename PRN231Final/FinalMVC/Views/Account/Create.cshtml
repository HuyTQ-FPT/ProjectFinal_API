@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using FinalAPI.Models
@model Account
@{
    Layout = "_Layout1";
}
<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<div class="parent clearfix">
    <div class="bg-illustration">
        <img src="https://i.ibb.co/Pcg0Pk1/logo.png" alt="logo">

        <div class="burger-btn">
            <span></span>
            <span></span>
            <span></span>
        </div>

    </div>

    <div class="login">
        <div class="container">
            <h1>Create new account<br />FPT</h1>

            <div class="login-form">
                <form asp-action="Regist" asp-controller="Account">
                    <input required type="text" asp-for="Username" placeholder="E-mail Address" value="">
                    <input required type="password" asp-for="Password" placeholder="Password" value="">
                    <input required type="password" name="rePassword" placeholder="Re-Password" value="">
                    <div class="forget-pass">
                        <a asp-action="Index" asp-controller="Account">Already to use?</a>
                    </div>
                    <button type="submit">CREATE</button>
                </form>
            </div>

        </div>
    </div>
</div>